  <div class="row">
  <div class="col-md-2"></div>
  <div class="col-md-8">
    <table class="table">
      <tr>
        <th>
          Name
        </th>
        <th>
        </th>
        <th>
        </th>
        <th>
        </th>
      </tr>
      <%i = 1 %>
      <% @files.each do |file| %>
      <tr>
      <td>
        <%=file %>
      </td>
      <td>
      <%=button_to("Download", file_download_path(file), method: "get", class: "btn btn-default") %>
      </td>
        <td>
          <%=button_to("Delete", file_delete_path(file), method: "delete", class: "btn btn-default") %>
        </td>
        <td>
          <button type="button" class="btn btn-primary btn-lg" data-toggle="modal" data-target="#modal_<%=i %>">
            <%=file%>
          </button>
          <div class="modal fade" id="modal_<%=i%>" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
            <div class="modal-dialog">
              <div class="modal-content">
                <div class="modal-header">
                  <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                  <h4 class="modal-title" id="myModal"><%=file%></h4>
                </div>
                <div class="modal-body">
                  <%= video_tag(file_download_path(file), controls: true) %>
                </div>
              </div>
            </div>
          </div>
        </td>
      </tr>
      <%i = i + 1 %>
      <% end %>
    </table>
  </div>
  <div class="col-md-2"></div>
</div>
